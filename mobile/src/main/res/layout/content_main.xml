<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:gravity="center_horizontal"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <Button
        android:id="@+id/basic"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="BASIC"/>

    <Button
        android:id="@+id/basic_with_magic"
        android:layout_below="@id/basic"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="BASIC W/ MAGIC"/>

    <Button
        android:id="@+id/with_action"
        android:layout_below="@id/basic_with_magic"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="W/ ACTION"/>

    <Button
        android:id="@+id/extended"
        android:layout_below="@id/basic_with_magic"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="EXTENDED"/>

    <Button
        android:id="@+id/big_text"
        android:layout_below="@id/extended"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="STYLE"/>

    <Button
        android:id="@+id/with_page"
        android:layout_below="@id/big_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="W/ PAGE"/>

    <Button
        android:id="@+id/with_voice"
        android:layout_below="@id/with_page"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="W/ VOICE"/>

    <Button
        android:id="@+id/with_button"
        android:layout_below="@id/with_voice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="W/ BUTTON"/>

    <Button
        android:id="@+id/with_view"
        android:layout_below="@id/with_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="W/ REMOTE VIEW"/>

</RelativeLayout>
